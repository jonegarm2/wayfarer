<h1>Check out similar Posts locations</h1>
<%= link_to "All Continents", root_path %>

<%= link_to "New Post", posts_new_path %>

<center>
<h2>All Posts</h2>
</center>

<table>
    <tbody>
    <tr>
        <th>Post Title</th>
        <th>Date Published</th>
    </tr>
    <% @posts.each do |post| %>
        <tr>
            <td><%= link_to post.title, post_path(post) %></td>
            <td><%= post.created_at %></td>
        </tr>
    <% end %>
    </tbody>
</table>