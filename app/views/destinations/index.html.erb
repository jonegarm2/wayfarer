<h1>Where do you want to go?</h1>

<div class="row">
<%@destinations.each do |destination| %>
   <div class="col s12">
      <div class="card-panel teal lighten-2">
        <div class="card-image">
          <% if !destination.pictures.first.nil? %> 
            <%= image_tag(destination.pictures.first.image.url.sub!("/system", "http://s3-us-west-1.amazonaws.com/wayfarergeneral")) %>
          <% end %>
          <span class="card-title"><%=destination.name%></span>
        </div>
        <div class="card-content">
          <p><%=destination.description%></p>
        </div>
        <div class="card-action">
          <%= link_to "See more Posts about your Location", destination_path(destination) %>
        </div>
      </div>
    </div>
    <%end%>
  </div>

    
   